<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="term name"
            android:maxLines="2"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"></TextView>

        <TextView
            android:id="@+id/text_view_start_date"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1999-99-99"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="2"
            android:layout_below="@id/text_view_name"
            android:ellipsize="end"></TextView>


        <TextView
            android:id="@+id/text_view_end_date"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2929-12-19"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="2"
            android:layout_below="@id/text_view_name"
            android:layout_toEndOf="@id/text_view_start_date"
            android:layout_toRightOf="@id/text_view_start_date"
            android:layout_alignBottom="@id/text_view_start_date"
            android:ellipsize="end"></TextView>

        <TextView
            android:id="@+id/text_view_status"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="finished"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="2"
            android:layout_toRightOf="@id/text_view_start_date"
            android:layout_above="@id/text_view_end_date"
            android:ellipsize="end"></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>